# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
NODE_ENV=development
PORT=5000

# ========================================
# BASE DE DATOS - MySQL
# ========================================
# Formato: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# Ejemplo local: mysql://root:password@localhost:3306/classroom_db
# Ejemplo con Docker: mysql://classroom_user:classroom_password@localhost:3306/classroom_db
# Ejemplo producción: mysql://user:pass@mysql-server.com:3306/classroom_db
DATABASE_URL="mysql://root:password@localhost:3306/classroom_db"

# Variables para Docker Compose (opcional)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=classroom_db
MYSQL_USER=classroom_user
MYSQL_PASSWORD=classroom_password
MYSQL_PORT=3306

# ========================================
# JWT - JSON WEB TOKENS
# ========================================
# Generar secretos seguros con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production

# Duración de tokens
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# OAUTH - GITHUB
# ========================================
# Obtener en: https://github.com/settings/developers
# Crear una OAuth App en GitHub Developer Settings
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ========================================
# SESIÓN
# ========================================
# Generar un secreto seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_super_secret_session_key_here_change_in_production

# ========================================
# OAUTH - GOOGLE (OPCIONAL)
# ========================================
# Obtener en: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ========================================
# OAUTH - FACEBOOK (OPCIONAL)
# ========================================
# Obtener en: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ========================================
# UPLOADS Y ARCHIVOS
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
# 10MB en bytes (10 * 1024 * 1024)

# ========================================
# CORS - ORIGENES PERMITIDOS
# ========================================
# Separar múltiples orígenes con comas
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
# Puerto 3000: React Web
# Puerto 19006: React Native Expo

# ========================================
# FRONTEND URL
# ========================================
FRONTEND_URL=http://localhost:3000

# ========================================
# OTROS
# ========================================
# Habilitar logs detallados en desarrollo
DEBUG=true
