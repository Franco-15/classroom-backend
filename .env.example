# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
NODE_ENV=development
PORT=5000

# ========================================
# BASE DE DATOS - PostgreSQL
# ========================================
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Ejemplo local: postgresql://postgres:password@localhost:5432/classroom_db
# Ejemplo con Docker: postgresql://classroom_user:classroom_password@localhost:5432/classroom_db
# Ejemplo producción: postgresql://user:pass@postgres-server.com:5432/classroom_db
DATABASE_URL="postgresql://classroom_user:classroom_password@localhost:5432/classroom_db?schema=public"

# Variables para Docker Compose (opcional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=classroom_db
POSTGRES_USER=classroom_user
POSTGRES_PASSWORD=classroom_password
# ========================================
# JWT - JSON WEB TOKENS
# ========================================
# Generar secretos seguros con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production

# Duración de tokens
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# OAUTH - GITHUB
# ========================================
# Obtener en: https://github.com/settings/developers
# Crear una OAuth App en GitHub Developer Settings
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ========================================
# SESIÓN
# ========================================
# Generar un secreto seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_super_secret_session_key_here_change_in_production

# ========================================
# CORS - ORIGENES PERMITIDOS
# ========================================
# Separar múltiples orígenes con comas
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
# Puerto 3000: React Web
# Puerto 19006: React Native Expo