generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String            @id @default(uuid())
  email         String            @unique
  password      String?
  name          String
  role          UserRole
  avatar        String?
  githubId      String?           @unique
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  accounts      Account[]
  announcements Announcement[]
  enrollments   ClassEnrollment[]
  classesOwned  Class[]           @relation("TeacherClasses")
  materials     Material[]
  submissions   Submission[]
  tasks         Task[]

  @@index([email])
  @@map("users")
}

model Class {
  id            String            @id @default(uuid())
  name          String
  description   String
  code          String            @unique
  subject       String?
  teacherId     String
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  announcements Announcement[]
  enrollments   ClassEnrollment[]
  teacher       User              @relation("TeacherClasses", fields: [teacherId], references: [id], onDelete: Cascade)
  materials     Material[]
  tasks         Task[]

  @@index([teacherId])
  @@index([code])
  @@map("classes")
}

model ClassEnrollment {
  id        String   @id @default(uuid())
  classId   String
  studentId String
  joinedAt  DateTime @default(now())
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([classId, studentId])
  @@index([studentId])
  @@map("class_enrollments")
}

model Announcement {
  id        String   @id @default(uuid())
  classId   String
  title     String
  content   String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId])
  @@index([authorId])
  @@map("announcements")
}

model Material {
  id          String   @id @default(uuid())
  classId     String
  title       String
  description String?
  fileUrl     String?
  link        String?
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  class       Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId])
  @@index([authorId])
  @@map("materials")
}

model Task {
  id          String       @id @default(uuid())
  classId     String
  title       String
  description String
  dueDate     DateTime
  points      Int?
  authorId    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  submissions Submission[]
  author      User         @relation(fields: [authorId], references: [id])
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId])
  @@index([authorId])
  @@index([dueDate])
  @@map("tasks")
}

model Submission {
  id          String     @id @default(uuid())
  taskId      String
  studentId   String
  content     String
  fileUrl     String?
  grade       Int?
  feedback    String?
  submittedAt DateTime   @default(now())
  gradedAt    DateTime?
  status      TaskStatus @default(SUBMITTED)
  updatedAt   DateTime   @updatedAt
  student     User       @relation(fields: [studentId], references: [id])
  task        Task       @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, studentId])
  @@index([studentId])
  @@index([status])
  @@map("submissions")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
}

enum TaskStatus {
  PENDING
  SUBMITTED
  GRADED
}
