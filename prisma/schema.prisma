// Prisma Schema para Google Classroom MVP
// Base de datos: postgresql

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

// ========================================
// ENUMS
// ========================================

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
}

enum TaskStatus {
  PENDING
  SUBMITTED
  GRADED
}

// ========================================
// MODELS
// ========================================

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String?
  name      String
  role      UserRole
  avatar    String?   @db.Text
  githubId  String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relaciones
  accounts      Account[]
  classesOwned  Class[]           @relation("TeacherClasses")
  enrollments   ClassEnrollment[]
  submissions   Submission[]
  announcements Announcement[]
  materials     Material[]
  tasks         Task[]

  @@index([email])
  @@map("users")
}

model Class {
  id          String   @id @default(uuid())
  name        String
  description String   @db.Text
  code        String   @unique // 6 caracteres alfanuméricos únicos
  subject     String?
  teacherId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  teacher       User              @relation("TeacherClasses", fields: [teacherId], references: [id], onDelete: Cascade)
  enrollments   ClassEnrollment[]
  announcements Announcement[]
  materials     Material[]
  tasks         Task[]

  @@index([teacherId])
  @@index([code])
  @@map("classes")
}

model ClassEnrollment {
  id        String   @id @default(uuid())
  classId   String
  studentId String
  joinedAt  DateTime @default(now())

  // Relaciones
  class   Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  student User  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([classId, studentId])
  @@index([studentId])
  @@map("class_enrollments")
}

model Announcement {
  id        String   @id @default(uuid())
  classId   String
  title     String
  content   String   @db.Text
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  class  Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id])

  @@index([classId])
  @@index([authorId])
  @@map("announcements")
}

model Material {
  id          String   @id @default(uuid())
  classId     String
  title       String
  description String?  @db.Text
  fileUrl     String?  @db.Text
  link        String?  @db.Text
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  class  Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id])

  @@index([classId])
  @@index([authorId])
  @@map("materials")
}

model Task {
  id          String   @id @default(uuid())
  classId     String
  title       String
  description String   @db.Text
  dueDate     DateTime
  points      Int?
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
  author      User         @relation(fields: [authorId], references: [id])
  submissions Submission[]

  @@index([classId])
  @@index([authorId])
  @@index([dueDate])
  @@map("tasks")
}

model Submission {
  id          String      @id @default(uuid())
  taskId      String
  studentId   String
  content     String      @db.Text
  fileUrl     String?     @db.Text
  grade       Int?
  feedback    String?     @db.Text
  submittedAt DateTime    @default(now())
  gradedAt    DateTime?
  status      TaskStatus  @default(SUBMITTED)
  updatedAt   DateTime    @updatedAt

  // Relaciones
  task    Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  student User @relation(fields: [studentId], references: [id])

  @@unique([taskId, studentId])
  @@index([studentId])
  @@index([status])
  @@map("submissions")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}
